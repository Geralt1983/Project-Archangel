# Test Environment Configuration for Project Archangel
# This file provides a SQLite-based testing environment that doesn't require PostgreSQL

# Database Configuration
DATABASE_URL=sqlite:///./test_archangel.db

# Testing Configuration
TESTING=true
TEST_DATABASE_URL=sqlite:///./test_archangel.db

# Application Configuration
API_HOST=localhost
API_PORT=8080
DEBUG=true

# Provider Configuration (Test Mode)
CLICKUP_API_TOKEN=test-token-clickup
TRELLO_API_KEY=test-key-trello
TRELLO_API_TOKEN=test-token-trello
TODOIST_API_TOKEN=test-token-todoist

# Webhook Configuration (Test Mode)
CLICKUP_WEBHOOK_SECRET=test-webhook-secret
WEBHOOK_BASE_URL=http://localhost:8080

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Configuration
CACHE_TTL=300
MAX_CONCURRENT_TASKS=10
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY=1.0

# Security Configuration (Test Mode)
SECRET_KEY=test-secret-key-for-development-only
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Feature Flags
ENABLE_ENHANCED_SCORING=true
ENABLE_FUZZY_LOGIC=false
ENABLE_ML_FEATURES=false
ENABLE_PERFORMANCE_MONITORING=true