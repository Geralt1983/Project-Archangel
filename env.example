# Project Archangel Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For local development (SQLite - default)
DATABASE_URL=sqlite:///./project_archangel.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@host:port/database

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
PORT=8080
METRICS_PORT=8090
LOG_LEVEL=INFO
ENVIRONMENT=development
TRACING_ENABLED=false

# =============================================================================
# SERENA AI INTEGRATION
# =============================================================================
SERENA_BASE_URL=http://localhost:24282
SERENA_API_KEY=your_serena_key_here
SERENA_TIMEOUT_SECONDS=20
SERENA_ENABLED=true

# =============================================================================
# CLICKUP INTEGRATION
# =============================================================================
CLICKUP_TOKEN=your_clickup_token_here
CLICKUP_TEAM_ID=your_clickup_team_id
CLICKUP_LIST_ID=your_clickup_list_id
CLICKUP_WEBHOOK_SECRET=your_clickup_webhook_secret

# =============================================================================
# TRELLO INTEGRATION
# =============================================================================
TRELLO_KEY=your_trello_api_key
TRELLO_TOKEN=your_trello_token
TRELLO_LIST_ID=your_trello_list_id
TRELLO_WEBHOOK_SECRET=your_trello_webhook_secret

# =============================================================================
# TODOIST INTEGRATION
# =============================================================================
TODOIST_TOKEN=your_todoist_token_here
TODOIST_PROJECT_ID=your_todoist_project_id
TODOIST_WEBHOOK_SECRET=your_todoist_webhook_secret

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
JAEGER_ENDPOINT=http://localhost:14268/api/traces
PROMETHEUS_ENDPOINT=http://localhost:9090

# =============================================================================
# SECURITY & ENCRYPTION
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-byte-encryption-key-change-this

# =============================================================================
# NOTIFICATIONS
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
PUBLIC_BASE_URL=https://your-public-host.com

# =============================================================================
# RENDER CLOUD DEPLOYMENT
# =============================================================================
# These will be automatically set by Render
# DATABASE_URL=postgresql://...
# REDIS_URL=redis://...
